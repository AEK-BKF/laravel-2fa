{
    "name": "mateusjunges/laravel-2fa",
    "description": "A simple two factor authentication for laravel applications",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mateus Junges",
            "email": "mateus@junges.dev"
        }
    ],
    "require": {
        "php": "^7.2.5",
        "illuminate/auth": "^5.8|^6.0|^7.0",
        "illuminate/support": "^5.8|^6.0|^7.0",
        "illuminate/database": "^5.8|^6.0|^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^3.8|^4.0|^5.0",
        "phpunit/phpunit": "^8.0|^9.0",
        "predis/predis": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Junges\\TwoFactorAuth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Junges\\TwoFactorAuth\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests"
    }
}
